class Solution {
public:
    string sanitize(string s) {
        string res = "";
        for (int i = 0; i < s.size(); i++) {
            if (s[i] >= 'A' && s[i] <= 'Z') {
                res += s[i] + 32;
            } else if ((s[i] >= 'a' && s[i] <= 'z') ||
                       s[i] >= '0' && s[i] <= '9') {
                res += s[i];
            } else if (!((s[i] >= 'a' && s[i] <= 'z') ||
                         (s[i] >= 'A' && s[i] <= 'Z'))) {
                continue;
            }
        }
        return res;
    }

    bool checkPalindrome(string t) {
        string revStr = t;
        reverse(revStr.begin(), revStr.end());
        return revStr == t;
    }

    bool isPalindrome(string s) {
        string t = sanitize(s);
        return checkPalindrome(t);
    }
};
