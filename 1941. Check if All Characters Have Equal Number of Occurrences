class Solution {
public:
    bool areOccurrencesEqual(string s) {
        map<char, int> mp;

        for (int i = 0; i < s.length(); i++) {
            mp[s[i]]++;
        }

        int firstCount = mp[s[0]];

        for (auto it : mp) {
            if (it.second != firstCount)
                return false;
        }
        return true;
    }
};
