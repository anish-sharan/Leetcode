class MinStack {
public:
    MinStack() {}

    int min(int a, int b) { return a < b ? a : b; }

    void push(int val) { st.push(val); }

    void pop() { st.pop(); }

    int top() { return st.top(); }

    int getMin() {
        int mini = INT_MAX;
        stack<int> t = st;
        while (!t.empty()) {
            mini = min(t.top(), mini);
            t.pop();
        }
        return mini;
    }

private:
    stack<int> st;
};

/**
 * Your MinStack object will be instantiated and called as such:
 * MinStack* obj = new MinStack();
 * obj->push(val);
 * obj->pop();
 * int param_3 = obj->top();
 * int param_4 = obj->getMin();
 */
