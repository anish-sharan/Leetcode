class Solution {
public:
    string formatStr(string s, int count) {
        string ans;
        if (s[0] == 'a' || s[0] == 'e' || s[0] == 'i' || s[0] == 'o' ||
            s[0] == 'u' || s[0] == 'A' || s[0] == 'E' || s[0] == 'I' ||
            s[0] == 'O' || s[0] == 'U') {
            ans = s + "ma";
        } else {
            ans = s.substr(1, s.length()) + s[0] + "ma";
        }

        for (int i = 0; i < count; i++) {
            ans += "a";
        }
        return ans;
    }
    string toGoatLatin(string sentence) {
        string temp = "";
        string ans = "";
        int count = 1;
        for (int i = 0; i < sentence.length(); i++) {
            if (sentence[i] == ' ') {
                ans += formatStr(temp, count++);
                temp = "";
                ans += " ";
            } else if (i == sentence.length() - 1) {
                temp += sentence[i]; // include last character
                ans += formatStr(temp, count++);
            } else {
                temp += sentence[i];
            }
        }

        return ans;
    }
};
