class Solution {
public:
    vector<int> sortArrayByParityII(vector<int>& nums) {
        vector<int> even,odd;
        vector<int> res;
        int e=0, o=0;

        for(auto it:nums){
            if(it%2==0){
                even.push_back(it);
            }else{
                odd.push_back(it);
            }
        }

        for(int i=0;i<nums.size();i++){
            if(i%2==0){
                res.push_back(even[e++]);
            }else{
                res.push_back(odd[o++]);
            }
        }

        return res;
    }
};
