class Solution {
public:
    bool isPalindrome(string s) {
        string rev = s;
        reverse(rev.begin(), rev.end());
        return rev == s;
    }
    string firstPalindrome(vector<string>& words) {
        string ans = "";
        for (int i = 0; i < words.size(); i++) {
            if (isPalindrome(words[i])) {
                ans = words[i];
                break;
            }
        }
        return ans;
    }
};
