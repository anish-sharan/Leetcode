class Solution {
public:
    vector<int> dailyTemperatures(vector<int>& temperatures) {
        stack<int> st;
        vector<int> res1(temperatures.size(), 0);

        for (int i = temperatures.size() - 1; i >= 0; i--) {
            int count = 0;

            while (!st.empty() && temperatures[st.top()] <= temperatures[i]) {
                st.pop();
            }

            if (!st.empty()) {
                res1[i] = st.top() - i;
            }
            st.push(i);
        }
        return res1;
    }
};
